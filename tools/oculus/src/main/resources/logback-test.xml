<?xml version="1.0" encoding="UTF-8"?>
<configuration>

   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <encoder>
         <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
      </encoder>
   </appender>
   
   <logger name="org.apache.zookeeper.ClientCnxn" level="WARN" />
   <logger name="org.apache.zookeeper.server" level="WARN" />
   <logger name="org.apache.kafka" level="WARN" />
   <logger name="kafka" level="WARN" />
   <logger name="org.I0Itec.zkclient" level="WARN" />

   <logger name="com.arcussmarthome.client" level="DEBUG" />
   <logger name="com.arcussmarthome.oculus.session" level="DEBUG" />
   <logger name="com.arcussmarthome.oculus.message" level="DEBUG" />
   
   <root level="WARN">
      <appender-ref ref="STDOUT" />
   </root>
 
</configuration>